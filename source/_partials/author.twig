
<div class="author well">
    <div class="media">
        {% if author.avatar %}
            <div class="pull-left">
                <img class="avatar img-thumbnail" src="{{ author.avatar }}" width="90" height="90" alt="">
            </div>
        {% endif %}
        <div class="media-body">
            <div class="media-heading">
                <h4>{{ author.name }}
                    {% if author.twitter %}<a href="{{ author.twitter }}"> <i class="icon icon-twitter"></i></a>{% endif %}
                    {% if author.url %}<a href="{{ author.url }}"><i class="icon icon-globe"></i></a>{% endif %}
                </h4>
                <p></p>
            </div>
            <p>{{ author.bio }}</p>
        </div>
    </div>
</div><!--/.author-->
